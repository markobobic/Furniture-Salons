@using Microsoft.AspNet.Identity
<div class="container">
    <div class="row">
        <div class="modal fade" id="ignismyModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    </div>
                    <button id="close-modal" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <div class="modal-body">
                        <div class="thank-you-pop">
                            <img src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png" alt="">
                            <h1>Submited Successfully!</h1>
                            <p>Your submission is received.</p>
                            <h3 class="cupon-pop">Admin: <span>@User.Identity.Name</span></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#ignismyModal").modal('show');
</script>
<link rel="Stylesheet" href="@Href("~/Content/PopUp.css")" />



