    </p>
</div>

@using (Html.BeginForm("GetDataFromSalon", "Furnitures", FormMethod.Get, new { onchange = "LoadData()" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.FurnitureSalonId, "Please select a Salon")
