@{
    /**/

    ViewBag.Title = "List Of Salons";
}

<h2>Furniture salons</h2>

<div style="width:1250px">
    <table id="Table" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Owner</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Website</th>
                <th>PIB</th>
                <th>Account  Number</th>
            </tr>
        </thead>
        <tfoot style="display:table-header-group">
            <tr>
                <th class="searchable">Name</th>
                <th class="searchable">Owner</th>
                <th class="searchable">Address</th>
                <th></th>
                <th></th>
                <th></th>
                <th class="searchable">PIB</th>
                <th class="searchable">Account Number</th>
            </tr>
        </tfoot>
        <tbody class="table table-bordered"></tbody>
    </table>
</div>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
@section scripts{

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js"></script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#Table").DataTable({
                "ajax": {
                    "url": "/FurnitureSalons/GetData/",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "Owner" },
                    { "data": "Adress" },
                    { "data": "TelephoneNumber" },
                    { "data": "Email" },
                    { "data": "WebPage" },
                    { "data": "PIB" },
                    { "data": "AccountNumber" }
                ],
                "language": {
                    "emptyTable": "No data found"
                },
                "responsive": true,
                "dom": 'lrtip'
            });

            $('.searchable').each(function () {
                var title = $('#Table thead th').eq($(this).index()).text();
                $(this).html('<input class="form-control " type="text" placeholder="Search ' + title + ' " ' + ' style="width: 130px;"/>')
            });

            dataTable.columns().every(function () {
                var datatableColumn = this;

                $(this.footer()).find('input').on('keyup change', function () {
                    datatableColumn.search(this.value).draw();
                });
            })
        });
    </script>
}