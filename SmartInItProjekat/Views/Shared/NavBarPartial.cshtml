@using Microsoft.AspNet.Identity
@Styles.Render("~/Content/Navbar.css")
@if (User.Identity.IsAuthenticated)
{
    <nav class="navbar navbar-expand-lg navbar-dark bg-blue navbar navbar-default navbar-fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                @Html.ActionLink("Furniture", "Index", "Furnitures",
           new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Furniture Salons", "Index", "FurnitureSalons",
           new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Furniture categories", "Index", "Categories",
           new { area = "" }, new { @class = "nav-link" })
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    @Html.ActionLink("Buyers", "IndexBuyers", "Users",
                        new { area = "" }, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Manage all users", "Index", "Users",
                        new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Bills", "Index", "Bills",
                        new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Reports", "Report", "Bills",
                        new { area = "" }, new { @class = "nav-link" })
                </li>
            }
        </ul>
    </nav>


}

